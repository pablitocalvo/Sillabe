public Sillaba()
    {   super();
        this.valore="a";
        this.stile=this.MAIUSCOLO;

    }
    public Sillaba(String valore,int stile)
    {   super();
        this.valore="a";
        this.stile=this.MAIUSCOLO;

    }

    public String getValore() {
        return valore;
    }

    public void setValore(String valore) {
        this.valore = valore;
    }

    public int getStile() {
        return stile;
    }

    public void setStile(int stile) {
        this.stile = stile;
    }

    <TableRow android:gravity="center_horizontal"
            android:id="@id/+primariga">
        </TableRow>


        TableRow row = (TableRow) findViewById(R.id.riga);
        Sillaba s = new Sillaba(this);

        s.setValore("zz");
        s.setTextSize(40);
        s.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                onSillabaCliccata(v);
            }
        });
        s.setClickable(true);
        row.addView(s);

        <org.example.sillabe.Sillaba
            android:id="@+id/sillabaDaIndovinare"
